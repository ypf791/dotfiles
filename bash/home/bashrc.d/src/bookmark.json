{
	"root": "/root/test",
	"tags": [{
		"name": "branch",
		"prefix": "/",
		"default": "curr"
	}, {
		"name": "platform",
		"prefix": "/${branch}/ds.",
		"default": "base"
	}, {
		"name": "project",
		"prefix": "/${branch}/ds.${platform}/source/",
		"condition": "[ \"packages\" != \"${branch}\" ]",
		"hidden": true
	}, {
		"name": "package",
		"prefix": "/packages/source/",
		"condition": "[ \"packages\" = \"${branch}\" ]",
		"hidden": true
	}],
	"bookmarks": [{
		"prefix": "/${branch}/ds.${platform}/source/",
		"condition": "[ \"packages\" != \"${branch}\" ]",
		"items": {
			"src": "/",
			"ls": "../lnxscripts"
		}
	}, {
		"prefix": "/packages/source",
		"condition": "[ \"packages\" = \"${branch}\" ]",
		"items": {
			"src": "/",
			"ls": "../pkgscript-ng"
		}
	}]
}

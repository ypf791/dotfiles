#!/bin/bash

TMPDIR=${TMPDIR:-/tmp/}

if [ "-w" = "$1" ]; then
	wrapDir=$2
	params=$3

	shift 3
	for i in 1 2; do
		_1=$1
		if [ "${1:0:${#TMPDIR}}" = "$TMPDIR" ]; then
			_1=$wrapDir/`basename $1`
			ln $1 $_1
		fi
		params="$params $_1"
		shift
	done

	echo "$params"
	exit 0
fi

gitRoot=
if ! gitRoot=`git rev-parse --git-dir`; then
	exit $?
fi
gitRoot=`dirname $gitRoot`

cd $gitRoot
if [ 'Darwin' = `uname -s` ]; then
	tempDir=`mktemp -d -t ".gdf_XXXX"` || exit 1
	temprc=`mktemp -t "vim.XXXX"` || exit 1
else
	tempDir=`mktemp -d -p $TMPDIR -t "gdf_XXXX"` || exit 1
	temprc=`mktemp -p $tempDir -t "vim.XXXX"` || exit 1
fi
cd - >/dev/null

_exit() {
	rm -rf "$gitRoot/$tempDir"
	exit $1
}

CMD="git difftool"
APPENDING="-y -x '`basename ${BASH_SOURCE[0]}` -w $tempDir \$BASE'"
while [ 0 -lt $# ]; do
	if [ "--" != "$1" ]; then
		CMD="$CMD \"$1\""
	else
		CMD="$CMD $APPENDING --"
		APPENDING=""
	fi
	shift
done
CMD="$CMD $APPENDING"

FILES=`eval "$CMD"`
[ 0 -ne $? ] && exit $?

parse_vimrc() {
	if [ 0 -eq $# ]; then
		return 1
	fi
	echo "au! BufEnter *" >> $temprc
	while [ $# -ge 3 ]; do
		cat >>$temprc <<EOF
tabe $3
vert diffsplit $2
if exists(":TabooRename")
	TabooRename $1
endif
EOF
		shift 3
	done
}

cd $gitRoot
parse_vimrc $FILES

if [ -s $temprc ]; then
	echo "tabfirst" >> $temprc
	echo "tabclose" >> $temprc
	vim -S $temprc
else
	echo "No difference found !" >&2
fi

_exit 0
